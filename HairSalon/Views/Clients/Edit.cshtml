@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit</h2>

<h4><span class=light-text>Edit this client: </span>@Html.DisplayFor(model => model.Name)</h4>

<div class="form">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.ClientId)
    <div class="form-block">
      @Html.LabelFor(model => model.Name)
      @Html.EditorFor(model => model.Name, new { required = "required" })
    </div>
    <div class="form-block">
      @Html.LabelFor(model => model.Description)
      @Html.TextAreaFor(model => model.Description, new { @class = "textbox" })
    </div>
    <div class="form-block">
      <input type="submit" value="Save" />
    </div>
  }
</div>

<div class="navlinks-back">
  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>