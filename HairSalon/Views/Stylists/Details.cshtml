@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h2>About @Html.DisplayFor(model => model.Name): <span class="light-text">Stylist</span></h2>
<p class="description">@Html.DisplayFor(model => model.Description)</p>
@if (@Model.Clients.Count == 0)
{
  <h3>This stylist does not have any clients yet.</h3>
}
else
{
  <h3>Clients:</h3>
  <ul class="lists">
  @foreach (Client client in Model.Clients)
    {
      <li><h4>@Html.ActionLink($"{client.Name}", "Details", "Clients", new { id = client.ClientId })</h4></li>
    }
  </ul>
}
<div class="navlinks">
  <p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId })</p>
  <p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId })</p>
  <p>@Html.ActionLink("Back to list", "Index")</p>
</div>
