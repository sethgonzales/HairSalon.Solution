@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h2>Clients</h2>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
}
else
{
  <ul class="lists">
  @foreach (Client client in Model)
    {
      <li>
        <h4>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | <span class="light-text">@client.Stylist.Name</span></h4>
      </li>
    }
  </ul>
}

<div class="navlinks">
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
  <p>@Html.ActionLink("Add new Stylist", "Create", "Stylists")</p>
  <p>@Html.ActionLink("Add new Client", "Create")</p>
</div>