@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Add a new stylist</h2>

<div class="form">
  @using (Html.BeginForm())
  {
    <div class="form-block">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
    </div>
    <div class="form-block">
      @Html.LabelFor(model => model.Description)
      @Html.TextAreaFor(model => model.Description, new { @class = "textbox" })
    </div>
    <div class="form-block">
      <input type="submit" value="Add new stylist" />
    </div>
  }
</div>

<div class="navlinks-back">
  <p>@Html.ActionLink("Back to Stylist List", "Index")</p>
</div>